<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>To-Do App</h1>

    <!-- Form to Add a New Item -->
    <form action="/api/items" method="POST">
        <input type="text" name="name" placeholder="Enter a new task" required>
        <button type="submit">Add Task</button>
    </form>   

    <h2>Current Tasks</h2>
    <ul>
        <% if (items && items.length > 0) { %>
            <% items.forEach((item, index) => { %>
                <li>
                    <%= item.name %> <!-- Render the task name -->
                    <form action="/api/items/<%= index %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit">Delete</button>
                    </form>                    
                </li>
            <% }); %>
        <% } else { %>
            <p>No tasks available!</p>
        <% } %>
    </ul>        
</body>
</html>
